                    <span asp-validation-for="Object.Vehicle.Brand" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Object.Vehicle.Model" class="control-label"></label>
                    <input asp-for="Object.Vehicle.Model" class="form-control" />
                    <span asp-validation-for="Object.Vehicle.Model" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Object.Vehicle.Year" class="control-label"></label>
                    <input asp-for="Object.Vehicle.Year" class="form-control" />
                    <span asp-validation-for="Object.Vehicle.Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Object.Vehicle.Comment" class="control-label"></label>
                    <input asp-for="Object.Vehicle.Comment" class="form-control" />
                    <span asp-validation-for="Object.Vehicle.Comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Object.Vehicle.ImageUrl" class="control-label"></label>
