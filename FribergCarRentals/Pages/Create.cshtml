@if (type == "booking")
{
    <h4>Booking</h4>
    <hr />

    @Model.Object.Vehicle
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Object.Booking.BookingStart" class="control-label"></label>
                    <input asp-for="Object.Booking.BookingStart" class="form-control" />
                    <span asp-validation-for="Object.Booking.BookingStart" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Object.Booking.BookingEnd" class="control-label"></label>
                    <input asp-for="Object.Booking.BookingEnd" class="form-control" />
                    <span asp-validation-for="Object.Booking.BookingEnd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" value="@Model.Object.Vehicle.VehicleId" asp-for="Object.VehicleId" />
                    <input type="submit" value="Book" asp-page-handler="Booking" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>
