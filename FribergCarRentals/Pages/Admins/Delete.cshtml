@page
@model FribergCarRentals.Pages.Admins.DeleteModel
@{
    ViewData["Title"] = Model.Object.Type;
    var type = Model.Object.Type;
}

<div class="action-container">

    @if (type == "Vehicle")
    {
        <div class="action-box">

            <h2>Vehicle</h2>

            <h3>Are you sure you want to delete this?</h3>

            <dl class="">
                <dt class="">
                    @Html.DisplayNameFor(model => model.Object.Vehicle.Brand)
                </dt>
                <dd class="">
                    @Html.DisplayFor(model => model.Object.Vehicle.Brand)
                </dd>
                <dt class="">
                    @Html.DisplayNameFor(model => model.Object.Vehicle.Model)
                </dt>
                <dd class="">
                    @Html.DisplayFor(model => model.Object.Vehicle.Model)
                </dd>
                <dt class="">
                    @Html.DisplayNameFor(model => model.Object.Vehicle.Year)
                </dt>
                <dd class="">
                    @Html.DisplayFor(model => model.Object.Vehicle.Year)
                </dd>
                <dt class="">
                    @Html.DisplayNameFor(model => model.Object.Vehicle.Comment)
                </dt>
                <dd class="">
                    @Html.DisplayFor(model => model.Object.Vehicle.Comment)
                </dd>
                <dt class="">
                    @Html.DisplayNameFor(model => model.Object.Vehicle.ImageUrl)
                </dt>
                <dd style="background: none;">
                    <img src="@Model.Object.Vehicle.ImageUrl" alt="Vehicle image" class="vehicle-img" />
                </dd>
            </dl>
            <form method="post">
                <input type="hidden" asp-for="Object.Vehicle.VehicleId" />
                <input type="submit" value="Delete" asp-page-handler="Vehicle" class="btn btn-delete" />
            </form>
        </div>

        <a asp-page="List" asp-page-handler="Vehicles" class="nav-link"> <i class="arrow right"></i> Back to List</a>
    }

    @if (type == "Customer")
    {
        <div class="action-box">

            <h2>Customer</h2>

            <h3>Are you sure you want to delete this?</h3>

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Object.Customer.FirstName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Object.Customer.FirstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Object.Customer.LastName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Object.Customer.LastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Object.Customer.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Object.Customer.Email)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Object.Customer.CustomerId" />
                <input type="submit" value="Delete" asp-page-handler="Customer" class="btn btn-delete" />

            </form>
        </div>

        <a asp-page="List" asp-page-handler="Customers" class="nav-link"> <i class="arrow right"></i> Back to List</a>
    }

    @if (type == "Booking")
    {
        <div class="action-box">

            <h2>Booking</h2>

            <h3>Are you sure you want to delete this?</h3>

            <dl class="row">
                <dt class="col-sm-2">
                    Vehicle
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Object.Booking.Vehicle.Brand) @Html.DisplayFor(model => model.Object.Booking.Vehicle.Model)
                </dd>
                <dt class="col-sm-2">
                    Customer
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Object.Booking.Customer.FirstName) @Html.DisplayFor(model => model.Object.Booking.Customer.LastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Object.Booking.BookingStart)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Object.Booking.BookingStart)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Object.Booking.BookingEnd)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Object.Booking.BookingEnd)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Object.Booking.BookingId" />
                <input type="submit" value="Delete" asp-page-handler="Booking" class="btn btn-delete" />

            </form>

        </div>
        <div class="nav-link">
        <a asp-page="List" asp-page-handler="Bookings"> <i class="arrow right"></i> Back to List</a>
        </div>

    }

</div>