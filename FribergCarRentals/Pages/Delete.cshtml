        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Object.Vehicle.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Object.Vehicle.Brand)
        </dd>
        <dt class="col-sm-2">
