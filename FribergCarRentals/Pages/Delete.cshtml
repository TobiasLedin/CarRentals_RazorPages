        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Object.Vehicle.ImageUrl)
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Object.Vehicle" />
        <input type="submit" value="Delete" asp-page-handler="Vehicle" class="btn btn-danger" /> |
        <a asp-page="List" asp-page-handler="Vehicles">Back to List</a>
    </form>

}

