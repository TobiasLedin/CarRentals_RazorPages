@page
@model FribergCarRentals.Pages.Admins.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>

    <div>
        <h4>Booking</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Vehicle
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Object.Booking.Vehicle.Brand) @Html.DisplayFor(model => model.Object.Booking.Vehicle.Model)
            </dd>
            <dt class="col-sm-2">
                Customer
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Object.Booking.Customer.FirstName) @Html.DisplayFor(model => model.Object.Booking.Customer.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Object.Booking.BookingStart)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Object.Booking.BookingStart)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Object.Booking.BookingEnd)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Object.Booking.BookingEnd)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Object.Booking.BookingId" />
            <input type="submit" value="Delete" asp-page-handler="Booking" class="btn btn-danger" /> |
            <a asp-page="List" asp-page-handler="Bookings">Back to List</a>
        </form>
    </div>
}