@page
@model FribergCarRentals.Pages.Customers.LoginModel
@{
    ViewData["Title"] = "Login";
    ViewData["navbar"] = "login";
}

@if ((string?)action == "login")
{
    <h2>Customer login</h2>

    <h4>Existing customer</h4>
    <hr />

    @* Vänster spalt, logga in befintlig customer *@

    <p class="text-danger">@ViewData["Fail"]</p>

    <div class="column">
        <div class="col-md-4">
            <form asp-page-handler="Login">

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    @* Höger spalt, skapa ny customer *@

    <h4>New customer</h4>

    <p class="text-danger">@ViewData["Message"]</p>

    <div class="column">
        <div class="col-md-4">
            <form asp-page-handler="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Customer.FirstName" class="control-label"></label>
                    <input asp-for="@Model.Customer.FirstName" class="form-control" />
                    <span asp-validation-for="@Model.Customer.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Customer.LastName" class="control-label"></label>
                    <input asp-for="@Model.Customer.LastName" class="form-control" />
                    <span asp-validation-for="@Model.Customer.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Customer.Email" class="control-label"></label>
                    <input asp-for="@Model.Customer.Email" class="form-control" />
                    <span asp-validation-for="@Model.Customer.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Customer.Password" class="control-label"></label>
                    <input asp-for="@Model.Customer.Password" class="form-control" />
                    <span asp-validation-for="@Model.Customer.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="/Index" class="nav-link">Return Home</a>
    </div>
}

@if ((string?)action == "logout")
{
    <div class="text-center">
        <h3>You are now logged out.</h3>

        <a asp-page="/Index" class="nav-link">Return Home</a>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}